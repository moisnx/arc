# semantic.theme - Tokyo Night adapted with semantic UI
name: "Tokyo Night (Semantic)"

# Core colors
background: "transparent"
foreground: "#A9B1D6"

# 🌟 State colors - Reusable across ALL UI components
# Mapped to Tokyo Night's functional colors
state_active: "#7AA2F7"
state_selected: "#283457"
state_hover: "#24283B"
state_disabled: "#565F89"

# 🛠️ Semantic UI colors - Reusable by meaning
# Mapped based on color and common association
ui_primary: "#7AA2F7"
ui_secondary: "#A9B1D6"
ui_accent: "#BB9AF7"
ui_success: "#9ECE6A"
ui_warning: "#FF9E64"
ui_error: "#F7768E"
ui_info: "#0DB9D7"
ui_border: "#3B4261"

# 📝 Editor-specific
