# üé® Catppuccin Mocha Color Scheme: A soothing, dark aesthetic
name: "Catppuccin Mocha"

# üíª UI Colors
# Base: Background color
background: "#1e1e2e"
# Text: Primary foreground text color
foreground: "#cdd6f4"
# Lavender: Cursor color
cursor: "#b4befe"
# Surface1: Selection highlight color
selection: "#45475a"
# Surface0: Line highlight background color
line_highlight: "#313244"
# Overlay0: Line numbers color
line_numbers: "#6c7086"
# Blue: Active line number color
line_numbers_active: "#89b4fa"

# üìä Status Bar Colors
# Surface0: Status bar background color
status_bar_bg: "#313244"
# Text: Status bar foreground text color
status_bar_fg: "#cdd6f4"
# Sky: Active status bar element color
status_bar_active: "#89dceb"

# ‚ú® Syntax Highlighting Tones
# Mauve: Keywords (e.g., 'if', 'for', 'class')
keyword: "#cba6f7"
# Green: String literals (text within quotes)
string_literal: "#a6e3a1"
# Teal: Numbers
number: "#94e2d5"
# Overlay1: Comments (non-executable explanatory text)
comment: "#7f849c"
# Pink: Function and method names
function_name: "#f5c2e7"
# Text: Variables
variable: "#cdd6f4"
# Yellow: Type definitions (e.g., 'int', 'string', custom classes)
type: "#f9e2af"
# Maroon: Operators (e.g., '+', '=', '>')
operator_color: "#eba0ac"
# Mauve: Preprocessor directives (e.g., '#include')
preprocessor: "#cba6f7"

# üêç Language Specific Tints
# Pink: Python decorators
python_decorator: "#f5c2e7"
# Mauve: Python built-in functions
python_builtin: "#cba6f7"
# Sky: C++ namespaces
cpp_namespace: "#89dceb"

# üìù Markdown Formatting Hues
# Mauve: Headings
markdown_heading: "#cba6f7"
# Yellow: Bold text
markdown_bold: "#f9e2af"
# Green: Italic text
markdown_italic: "#a6e3a1"
# Teal: Inline code blocks
markdown_code: "#94e2d5"
# Pink: Hyperlinks
markdown_link: "#f5c2e7"
# Overlay1: Blockquotes
markdown_quote: "#7f849c"